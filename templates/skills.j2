
<html>
<head>
    <title>Skills</title>
    <link href="style.css" rel="stylesheet" type="text/css" />
</head>

<body>
<h1>Skills</h1>
 <h3>
        [<a href="appointments">Appointments |</a>
        <a href="client"> Clients |</a> |
        <a href="provider"> Providers |</a>
        Skills |</a>
        <a href="behaviors"> Behaviors </a>]
    </h3>

<div id="browse">
    <table border="1" cellpadding="5">
        {% if data %}
        <thead>Skills</thead>
        <tr>
            <!-- iterate through and build the table to display data -->
            {% for key in data[0].keys() %}
                <!-- headers -->
                <th>{{ key }}</th>
            {% endfor %}
        </tr>

        <tbody>
        {% for skill in data %}
        <tr>
            <!-- iterate and populate table with data -->
            {% for key in skill.keys() %}
            <td>{{skill[key]}}</td>
            {% endfor %}
            <td><a href="/delete_skill/{{skill.skills_id}}" class="btn btn-default">Delete</a></td>
        </tr>
        {% endfor %}
        {% endif %}
    </table>
</div>



<div id="insert">
    <!-- form to add a new behavior -->
    <form id="insertskill" action="/skills" method="POST">
        <legend><strong>Add skill</strong></legend>
        <fieldset>
            <!-- placeholder shows ghost text, required forces an input, pattern forces input adherence -->
            <label for="name">Name:</label>
            <input type="text" class="form-control" id="name" name="name" placeholder="" required>

            <label for="definition">Definition:</label>
            <input type="text" class="form-control" id="definition" name="definition" placeholder="" required>

            <label for="pass_condition">Pass condition:</label>
            <input type="text" class="form-control" id="pass_condition" name="pass_condition" "placeholder="">

            <label for="client">Client: </label>
            <select id="client" name="client" required>
                <!-- Access our tuple passed from app.py-->
                <option value="0"> </option>
                {% for client in client_data %}
                <option value="{{ client['client_id'] }}"> {{client['fname']}} {{client['lname']}}</option>
                {% endfor %}
            </select>
        </fieldset>

        <!-- Create 'Add behavior' and 'Cancel' buttons -->
        <input type="submit" value="Add skill" name="Add_skill" class="btn btn-primary" style="margin:.5rem;">
        <input class="btn" type="button" value="Cancel">
    </form>
</div>



</body>
</html>